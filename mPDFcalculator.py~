#!/usr/bin/env python
import numpy as np
import scipy as sp
from mcalculator import *
class mPDFcalculator:
    ''' mPDFcalculator class.

    '''
    def __init__(self,atoms=[],spins=[],rmin=0.0,rmax=20.0):
        self.atoms=atoms
        self.spins=spins
        self.rmin=rmin
        self.rmax=rmax

    def getRmin(self):
        return self.rmin

def test():
    mc=mPDFcalculator()
    print mc.getRmin()
    
if __name__=='__main__':
    test()
